<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="gameViewModel"
            type="com.example.projekat_kviz.screens.game.GameViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/radioBtns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/radiobtn_padding"
                android:paddingStart="@dimen/horizontal_margin_big"
                android:paddingEnd="@dimen/radiobtn_padding"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="6dp" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>